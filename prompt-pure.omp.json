{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "blocks": [
    {
      "alignment": "left",
      "newline": true,
      "segments": [
        {
          "foreground": "red",
          "properties": {
            "prefix": "",
            "root_icon": "Admin"
          },
          "style": "plain",
          "type": "root"
        },
        {
          "foreground": "lightCyan",
          "properties": {
            "enable_hyperlink": true,
            "mapped_locations": {
              "/home/bob/winhome": "\uF17A"
            },
            "prefix": "",
            "style": "full"
          },
          "style": "plain",
          "type": "path"
        }
      ],
      "type": "prompt"
    },
    {
      "alignment": "left",
      "segments": [
        {
          "foreground": "green",
          "properties": {
            "display_mode": "context",
            "prefix": " \uE235 "
          },
          "style": "plain",
          "type": "python"
        },
        {
          "foreground": "default",
          "properties": {
            "branch_ahead_icon": "<lightGreen>⇡ </>",
            "branch_behind_icon": "<lightGreen>⇣ </>",
            "branch_icon": "",
            "display_stash_count": true,
            "display_status": true,
            "display_status_detail": true,
            "display_upstream_icon": true,
            "github_icon": "",
            "local_working_icon": "<lightMagenta> *</>",
            "prefix": "\uE725 "
          },
          "style": "plain",
          "type": "git"
        }
      ],
      "type": "prompt"
    },
    {
      "alignment": "right",
      "segments": [
        {
          "properties": {
            "always_numeric": true,
            "error_color": "red",
            "error_icon": "\uF06A ",
            "prefix": ""
          },
          "style": "plain",
          "type": "exit"
        },
        {
          "foreground": "yellow",
          "properties": {
            "prefix": "\uFA89 ",
            "style": "round",
            "threshold": 2000
          },
          "style": "plain",
          "type": "executiontime"
        },
        {
          "foreground": "lightBlue",
          "properties": {
            "prefix": "\uF017 ",
            "time_format": "15:04"
          },
          "style": "plain",
          "type": "time"
        }
      ],
      "type": "rprompt"
    },
    {
      "alignment": "left",
      "newline": true,
      "segments": [
        {
          "foreground": "magenta",
          "properties": {
            "prefix": "",
            "windows": "\uF17A",
            "wsl": "",
            "wsl_separator": ""
          },
          "style": "plain",
          "type": "os"
        },
        {
          "foreground": "lightMagenta",
          "properties": {
            "always_enabled": true,
            "display_exit_code": false,
            "error_color": "lightRed",
            "prefix": "❯"
          },
          "style": "plain",
          "type": "exit"
        }
      ],
      "type": "prompt"
    }
  ],
  "console_title": true,
  "console_title_style": "template",
  "console_title_template": "{{if .Root}}(Admin){{end}} {{.Path}}"
}
